doctype html
html
  head
      block head
        title="Input"
        link(rel='stylesheet' href='/stylesheets/reset.css')
        link(rel='stylesheet' href='/stylesheets/index.css')
        link(rel='stylesheet' href='/stylesheets/styles.css')
        link(rel='stylesheet' href='/stylesheets/button.css')
        link(rel='stylesheet' href='/stylesheets/tooltip.css')
        link(rel='stylesheet' href='/stylesheets/taehoon.css')
        link(rel='stylesheet' href='/stylesheets/test.css')
        link(rel='stylesheet' href='/stylesheets/typewriter.css')
        link(rel='stylesheet' href='/font-awesome-4.7.0/css/font-awesome.min.css')
        link(rel="preconnect" href="https://fonts.googleapis.com")
        link(rel="preconnect" href="https://fonts.gstatic.com" crossorigin)
        link(href="https://fonts.googleapis.com/css2?family=Poor+Story&family=Press+Start+2P&display=swap" rel="stylesheet")
        script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js")

        meta(property="og:title" content="Input")
        meta(property="og:image" content="/assets/intro.gif")
        meta(property="og:description" content="Input is a clone of Medium where you can share your video game walkthroughs and reviews!")
