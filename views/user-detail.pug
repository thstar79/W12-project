extends layout.pug

block content
    
    div(class='py-3')
    table(class='table table-striped table-hover')
        thead(class='thead-dark')
        tr
            th(scope='col') First Name
            th(scope='col') Last Name
            th(scope='col') Username
        tbody
            tr
            td= user.firstName
            td= user.lastName
            td= user.userName
    form(action='/follows',method='post')
        input(type='hidden' name='_csrf' value=csrfToken)
        input(type='hidden' name='userId1' value=user.id)
        div(class='py-4')
            button(type='submit' id='submit-button') Follow this User

