
extends layout.pug 
include utils.pug 

block content 
    h1=title
    form(action=`/stories/delete/${story.id}` method='post')
        input(type='hidden' name='_csrf' value=csrfToken)
        h2 Deleting story #{story.title}
        button confirm
        button
            a(href=`/stories/${story.id}`) return
