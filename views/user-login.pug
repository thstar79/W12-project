extends layout.pug 
include utils.pug 

block content
    #container
        #top
            p#arcadeTopText='INPUT'
        #toptwo
        #mainContainer 
            #screenContainer
                .loginBox
                    h1(id="loginTitle")=title
                    +validationErrorSummary(errors)
                    form(action='' method='post')
                        input(type='hidden' name='_csrf' value=csrfToken)
                        #loginformBox
                            #loginField
                                #loginFieldLabel
                                    label(for='email') Email Address
                                #loginFieldInput    
                                    input(type='text' id='loginEmailInput' name='email' value=email)
                            #loginField
                                #loginFieldLabel
                                    label(for='password') Password
                                #loginFieldInput
                                    input(type='password' id='loginPasswordInput' name='password' )
                            .loginbuttonbox
                                button#transparent-button
                                    span.start-btn LOGIN      
                                a(href="/users/register")
                                    span.start-btn REGISTER
                            .mario
        #controller
            div
                button.pushable
                    span.shadow
                    span.edge
                    span.front A
            div
                button.pushable
                    span.shadow
                    span.edge
                    span.front#testButton B        
        #bottom