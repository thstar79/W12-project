extends layout.pug
include utils.pug

append head
  link(rel="stylesheet" href="/stylesheets/storyDetail.css")

block content
  h1= title
  .containerBoxWrapper
    .containerBox
      .headerBox
        .headerBoxImg
          img(src=`/img/users/user${story.userId%20}.png` width='75px')
        .headerBoxTopic
          h2=story.title
          p(id="storyWrittenDateDetail")=`${story.createdAt.toString().slice(0,15)}`
          p #{story.topicType}
      .storyContentBox
        .storyContentTextBox
          p=story.content
        .storyContentImgBox
          img(src=`/img/gameimg/game${story.gameId}.png` width="300px")

      .storyContentFooter
        .coinBox
          img(id=`storyCoin-${story.id}` class="storyCoinSpinImage coinSound" src='/img/coin.png' width='60px')
          p(id='storyCoinText')=storyCoinsCount
          p(id='userStoryCoinText')=userStoryCoinsCount
          button(id=`strcommentID${story.id}ID${session}` class='strcomment')
              span.start-btn Comment
      if session === story.userId || session === 2
        .storyContentButtonBox
          button#transparent-button
            span.start-btn
              a(href=`/stories/edit/${story.id}`) Edit
          button#transparent-button
            span.end-btn
              a(id="cancelbutton" href=`/stories/delete/${story.id}`) Delete
      end

