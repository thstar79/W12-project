extends layout.pug 
include utils.pug 
block content
  h1= title
  .containerBoxWrapper
    .containerBox
      .headerBox 
        img(src='/img/usericon.png' width='100px')
        a(href='#') #{story.topicType}
      .storyContentBox
        h2=story.title
        p=story.content
        img(src='/img/storycontent.webp' width="300px")
      .editDelButtonBox 
        button.pushable
          span.shadow
          span.edge
          span.front 
            a(href='') Edit 
        button.pushable
          span.shadow
          span.edge
          span.front 
            a(href='') Delete
      .commentBoxWrapper
        .commentList
          .commentFormBox
            form(action='/comments/new' method='post')
              input(type='hidden' name='_csrf' value=csrfToken)
              input(type='hidden' name='storyId' value=story.id)
              +field('', 'comment', '', 'textarea')
              div(class='py-4')
              button(type='submit' class='submit-button') Write Comment
        each coin in coins     
          .commentBox 
            .commentBoxContent 
              .profile 
                img(src='/img/usericon.png' width='50px')
                p=`${coin.User.firstName} ${coin.User.lastName}`
              .commentBoxBubble 
                p=coin.Comment.comment
          .editDelButtonBox 
            button.pushable
              span.shadow
              span.edge
              span.front 
                a(href='') Edit 
            button.pushable
              span.shadow
              span.edge
              span.front 
                a(href='') Delete